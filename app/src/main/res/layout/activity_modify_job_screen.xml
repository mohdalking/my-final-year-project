<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ADF1AF"
    tools:context="com.proGrad.temporaryjobapp.OwnerActivities.ModifyJobScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/fontMainColor">

            <EditText
                android:id="@+id/job_name_add_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Job Name"
                android:inputType="textPersonName"
                android:textColor="@color/fontMainColor"
                android:textColorHint="@color/fontMainColor" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/fontMainColor">

            <AutoCompleteTextView
                android:id="@+id/job_cat_add_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Job Category"
                android:inputType="textPersonName"
                android:textColor="@color/fontMainColor"
                android:textColorHint="@color/fontMainColor" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/job_location_add_et"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:hint="Job Location"
            android:inputType="text"
            android:textColor="@color/fontMainColor"
            android:textColorHint="@color/fontMainColor" />

        <TextView
            android:id="@+id/job_deadline_add_et"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:hint="Job Deadline"
            android:inputType="date"
            android:textColor="@color/fontMainColor"
            android:textColorHint="@color/fontMainColor" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/fontMainColor">

            <EditText
                android:id="@+id/job_salary_add_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:ems="10"
                android:hint="Job Salary"
                android:inputType="number"
                android:textColor="@color/fontMainColor"
                android:textColorHint="@color/fontMainColor" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/fontMainColor">

            <EditText
                android:id="@+id/job_desc_add_et"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:ems="10"
                android:hint="Job Description"
                android:inputType="text"
                android:textColor="@color/fontMainColor"
                android:textColorHint="@color/fontMainColor" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/fontMainColor">

            <AutoCompleteTextView
                android:id="@+id/job_worker_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:ems="10"
                android:hint="Job Worker"
                android:inputType="textPersonName"
                android:textColor="@color/fontMainColor"
                android:textColorHint="@color/fontMainColor" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/modify_job_bt"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/circular_bt"
            android:text="Modify Job"
            android:textColor="#ffffff"
            android:textStyle="bold" />


    </LinearLayout>

</ScrollView>
