<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ADF1AF"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.proGrad.temporaryjobapp.WorkerActivities.SearchJobsScreen">


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/fontMainColor">

        <EditText
            android:id="@+id/job_salary_search_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:ems="10"
            android:hint="Search By Salary Set Minimum"
            android:inputType="number" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/job_location_search_et"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="Job Location"
        android:inputType="date"
        android:textColor="@color/fontMainColor"
        android:textColorHint="@color/fontMainColor" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Choose Category"
        android:textColor="@color/fontMainColor" />

    <Spinner
        android:id="@+id/spinner_cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:entries="@array/categories"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/search_job_by_keywords_bt"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/circular_bt"
        android:text="Search"
        android:textColor="#ffffff"
        android:textStyle="bold" />
</LinearLayout>
