<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/compress_bg"
    tools:context="com.proGrad.temporaryjobapp.RegisterScreen">

    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/account_type_radio_group"
            android:layout_width="217dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            style="@style/RadioButtonStyle"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/admin_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:textStyle="bold"
                style="@style/RadioButtonStyle"
                android:text="Job Owner"
                android:textColor="#ffffff" />

            <RadioButton
                android:id="@+id/user_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                style="@style/RadioButtonStyle"
                android:textColor="#ffffff"
                android:text="Worker" />
        </RadioGroup>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            style="@style/y_TextLabel"
            >
        <EditText
            android:id="@+id/job_name_modify_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textPersonName"
         ></EditText>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/y_TextLabel"

            android:layout_marginTop="5dp"
            >
        <EditText
            android:id="@+id/job_cat_modify_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="User Name"
            android:inputType="textPersonName"
            />
         </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/y_TextLabel"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/colorPrimary"

            android:layout_marginTop="5dp"
            >
        <EditText
            android:id="@+id/job_location_modify_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/y_TextLabel"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/colorPrimary"

            android:layout_marginTop="5dp"
            >
        <EditText
            android:id="@+id/password_reg_repeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Repeat Password"
            android:inputType="textPassword" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/y_TextLabel"
            android:layout_marginTop="5dp"
            >
        <EditText
            android:id="@+id/job_deadline_modify_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:inputType="number"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/y_TextLabel"
            android:layout_marginTop="5dp"
            >
        <EditText
            android:id="@+id/job_salary_modify_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name"
            android:inputType="textPersonName" />
        </android.support.design.widget.TextInputLayout>
        <Button
            android:id="@+id/register_bt"
            android:layout_width="200dp"
            android:layout_height="49dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/transparent_bt_white"
            android:text="REGISTER"
            android:textStyle="bold"
            android:textColor="#ffffff" />


        <TextView
            android:id="@+id/have_account_link_button"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:textStyle="bold"
            android:text="Do you have an Account ? Press Here"
            android:textColor="#ffffff" />
    </LinearLayout>
</ScrollView>
